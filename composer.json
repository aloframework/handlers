{
  "name": "aloframework/handlers",
  "description": "The error and exception handlers of AloFramework",
  "prefer-stable": true,
  "type": "library",
  "license": "GPL-3.0+",
  "homepage": "https://github.com/aloframework/handlers",
  "keywords": [
    "PHP",
    "5.4",
    "error",
    "exception",
    "handler",
    "configurable"
  ],
  "authors": [
    {
      "name": "Art",
      "email": "a.molcanovas@gmail.com",
      "role": "Developer",
      "homepage": "https://github.com/Alorel"
    }
  ],
  "support": {
    "issues": "https://github.com/aloframework/handlers/issues"
  },
  "require-dev": {
    "apigen/apigen": "^2.8",
    "phpmd/phpmd": "^2.2",
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "require": {
    "php": ">=5.4",
    "symfony/var-dumper": "^2.7"
  },
  "suggest": {
    "aloframework/aloframework": "The complete stack with all the components",
    "aloframework/log": "Enable automatic logging of errors and exceptions"
  },
  "autoload": {
    "files": [
      "autoload_composer.php",
      "src/config.default.php"
    ],
    "psr-4": {
      "AloFramework\\Handlers\\": "src/class/"
    }
  }
}
